# -*- conf -*-
# Monit file for apache2 SSL


check process apache2-ssl with pidfile /var/run/apache2.pid
      group www-data
      start program = "/etc/init.d/apache2 start" with timeout 30 seconds
      stop  program = "/etc/init.d/apache2 stop" with timeout 30 seconds
      if failed host @@HOST_SERVICE@@ port 443 TCPSSL
      	 protocol HTTP then restart
      if 5 restarts within 5 cycles then timeout